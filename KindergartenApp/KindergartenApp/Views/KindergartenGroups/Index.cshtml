@model IEnumerable<KindergartenApp.Models.KindergartenGroup>

<h1>Kindergarten Groups</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Group</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Group Name</th>
            <th>Children Count</th>
            <th>Kindergarten Name</th>
            <th>Teacher</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.GroupName</td>
                <td>@item.ChildrenCount</td>
                <td>@item.KindergartenName</td>
                <td>@item.Teacher</td>
                <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td>@item.UpdatedAt?.ToString("dd/MM/yyyy")</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.PicturePath))
                    {
                        <img src="@item.PicturePath" alt="Group Image" style="width:100px;height:auto;" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
