@model KindergartenCRUD.Pages.Kindergartens.DeleteModel

<h2>Delete Kindergarten</h2>

<h3>Are you sure you want to delete this Kindergarten?</h3>

<div>
    <h4>@Model.Kindergarten.GroupName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Group Name
        </dt>
        <dd class="col-sm-10">
            @Model.Kindergarten.GroupName
        </dd>
        <dt class="col-sm-2">
            Children Count
        </dt>
        <dd class="col-sm-10">
            @Model.Kindergarten.ChildrenCount
        </dd>
        <dt class="col-sm-2">
            Teacher
        </dt>
        <dd class="col-sm-10">
            @Model.Kindergarten.Teacher
        </dd>
    </dl>

    <form method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>