@model KindergartenCRUD.Models.KindergartenGroup

@{
    ViewData["Title"] = "Delete Kindergarten Group";
}

<h2>Delete Kindergarten Group</h2>

<h3>Are you sure you want to delete this group?</h3>

<div>
    <h4>@Model.GroupName</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Group Name
        </dt>
        <dd class="col-sm-10">
            @Model.GroupName
        </dd>
        <dt class="col-sm-2">
            Children Count
        </dt>
        <dd class="col-sm-10">
            @Model.ChildrenCount
        </dd>
        <dt class="col-sm-2">
            Kindergarten Name
        </dt>
        <dd class="col-sm-10">
            @Model.KindergartenName
        </dd>
        <dt class="col-sm-2">
            Teacher
        </dt>
        <dd class="col-sm-10">
            @Model.Teacher
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
