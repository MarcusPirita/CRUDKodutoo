@model IEnumerable<KindergartenCRUD.Models.KindergartenGroup>

@{
    ViewData["Title"] = "Kindergarten Groups";
}

<h2>Kindergarten Groups</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Group</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Group Name</th>
            <th>Children Count</th>
            <th>Kindergarten Name</th>
            <th>Teacher</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.GroupName</td>
                <td>@item.ChildrenCount</td>
                <td>@item.KindergartenName</td>
                <td>@item.Teacher</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class=" btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
